<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeComposeLightBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#FFFAFAFA</item>
    </style>

    <style name="AppThemeComposeDarkBase" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">#FF121212</item>
    </style>

    <style name="AppThemeComposeLight" parent="AppThemeComposeLightBase">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/system_ui_overlay</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeComposeDark" parent="AppThemeComposeDarkBase">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
